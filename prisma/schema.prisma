generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["driverAdapters", "strictUndefinedChecks"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Place {
  id          Int      @id @default(autoincrement())
  title       String?
  likes       Int?
  views       Int?
  userName    String?  @map("user_name")
  tags        String?
  url         String?
  address     String?
  explanation String?
  latitude    Float?
  longitude   Float?
  photoName   String?  @map("photo_name")
  scale       Int?
  createdAt   DateTime @default(dbgenerated("(datetime('now'))")) @map("created_at")
  updatedAt   DateTime @default(dbgenerated("(datetime('now'))")) @map("updated_at")

  @@map("places")
}
